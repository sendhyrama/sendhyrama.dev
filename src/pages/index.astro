---
import Projects from "@/components/home/Projects.astro";
import skills from "@/data/skillsData";
import Cards from "@components/Cards.astro";
import Certificates from "@components/home/Certificates.astro";
import Contact from "@components/home/Contact.astro";
import Education from "@components/home/Education.astro";
import Hero from "@components/home/Hero.astro";
import Layout from "../layouts/Layout.astro";

const itemsNumber =
  "grid-cols-3 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-5";
---

<Layout
  title="Sendhyrama's Mine"
  description="I'm Sendhyrama, Android learner & Flutter enthusiast 👨🏻‍💻"
>
  <main>
    <Hero />

    <div
      id="blob"
      class="fixed left-1/2 top-1/2 h-1/3 aspect-[1] z-[-1] rounded-full opacity-80 bg-gradient-to-r from-yellow-500 to-red-500 animate-rotate-blob blur-xl"
    >
    </div>

    <div class="z-50">
      <!-- Skills -->
      <section id="skills">
        <Cards props={skills} display={itemsNumber} />
      </section>
      <!-- Projects -->
      <!-- <Projects /> -->
      <!-- Education -->
      <!-- <Education /> -->
      <!-- Certificates -->
      <Certificates />

      <!-- Contact -->
      <Contact id="contact" />
    </div>
  </main>

  <script src="@/scripts/blob.ts"></script>
</Layout>
