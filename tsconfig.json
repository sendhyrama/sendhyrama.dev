{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@content/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@context/*": ["src/context/*"],
      "@layout/*": ["src/layout/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "types": ["@astrojs/image/client"]
  }
}
